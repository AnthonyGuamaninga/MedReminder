<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo2"
    tools:context=".ui.activities.MedicamentosRegistroMapaActivity">


    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico_baseline_menu" />



    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="150dp"
        android:layout_height="50dp"


        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_logo1removebg_51x151" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtImputDosis"
        android:layout_width="match_parent"
        style="@style/text_input_layout_medicamento_registro"
        android:hint="Dosis"

        android:layout_marginTop="80dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtImputDosis"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtImputIndicaciones"
        android:layout_width="match_parent"
        style="@style/text_input_layout_medicamento_registro"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtImputDosis"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtImputIndicaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Indicaciones"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputFrecuencia"
        android:layout_width="match_parent"
        style="@style/text_input_layout_medicamento_registro"
        android:hint="Frecuencia"

        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtImputIndicaciones" >




        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtInputFrecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputLayoutFechaInicio"
        android:layout_width="match_parent"
        style="@style/text_input_layout_medicamento_registro"
        android:hint="Fecha de inicio"

        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputFrecuencia"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTextImputFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputCaducidad"
        android:layout_width="match_parent"
        style="@style/text_input_layout_medicamento_registro"
        android:hint="Caducidad"

        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutFechaInicio"
        >



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtInputCaducidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputObservaciones"
        style="@style/text_input_layout_medicamento_registro"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:hint="Observaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputCaducidad">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtInputObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_marginTop="20dp"
        android:text="Agregar"
        android:backgroundTint="@color/fondo1_cyan"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInputObservaciones" />

</androidx.constraintlayout.widget.ConstraintLayout>