<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MedicamentoRecordatorio" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/light_green</item> -->
    </style>

    <style name="Theme.MedicamentoRecordatorio" parent="Base.Theme.MedicamentoRecordatorio">
        <item name="colorPrimary">@color/dark_green</item>
    </style>

    <style name="theme_normal">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="theme_registro">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxStrokeColor">@color/gray_am</item>
    </style>
    <style name="theme_registro_med">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxStrokeColor">@color/gray_am</item>
    </style>
    <style name="theme_normal2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="maxLines">1</item>
    </style>
    <style name="theme_normal_center">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">30dp</item>
    </style>
    <style name="theme_normal_center2">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="theme_title">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="theme_buttom">
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="cornerRadius">10dp</item>

    </style>
    <style name="theme_login_icons">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MyButton" >
        <item name="android:textSize">17sp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>